@page "/counter"
@inject ILogger<Counter> Logger
@inject CounterModel CounterModel

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @CounterModel.CurrentCount</p>

@if (CounterModel is not null)
{
    <button class="btn btn-primary"
            @onclick="CounterModel.IncrementCount">Click me</button>
}
